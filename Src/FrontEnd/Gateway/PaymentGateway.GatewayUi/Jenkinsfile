pipeline{
    agent any

    environment {
        CONTAINER_NAME = "paymentuicont"
        IMAGE_NAME = "payui:V$BUILD_NUMBER"
        PREVIOUS_BUILD = "${env.BUILD_NUMBER.toInteger() - 1}"
        PRE_IMAGE = "payui:V$PREVIOUS_BUILD"
    }

    stages {
        stage('Fetch Code') {
            when {
                anyOf {
                    changeset "**/Src/FrontEnd/Gateway/PaymentGateway.GatewayUi/**"  // Only trigger when files in the 'src' folder change
                    changeset "Src/Backend/PaymentGateway.Domain/PaymentGateway.Domain.csproj"
                    changeset "BuildingBlocks/Common.Helper/Common.Helper.csproj"
                }
            }
            steps {
                git url: 'git@github.com:eshghi26/paygate.git',
                branch: 'main',
                credentialsId: 'mygitubpk'
            }
        }

        stage('Build Docker Image'){
            when {
                anyOf {
                    changeset "**/Src/FrontEnd/Gateway/PaymentGateway.GatewayUi/**"  // Only trigger when files in the 'src' folder change
                    changeset "Src/Backend/PaymentGateway.Domain/PaymentGateway.Domain.csproj"
                    changeset "BuildingBlocks/Common.Helper/Common.Helper.csproj"
                }
            }
            steps {
                script {
                    dockerImage = docker.build(IMAGE_NAME, "-f Src/FrontEnd/Gateway/PaymentGateway.GatewayUi/Dockerfile .")
                }
            }
        }

        stage('Delete Previous Container') {
            when {
                anyOf {
                    changeset "**/Src/FrontEnd/Gateway/PaymentGateway.GatewayUi/**"  // Only trigger when files in the 'src' folder change
                    changeset "Src/Backend/PaymentGateway.Domain/PaymentGateway.Domain.csproj"
                    changeset "BuildingBlocks/Common.Helper/Common.Helper.csproj"
                }
            }
            steps {
                script {
                    // Check if the container exists and stop it if running
                    sh """
                    if [ \$(docker ps -a -q -f name=$CONTAINER_NAME) ]; then
                        echo "Stopping and removing existing container..."
                        docker stop $CONTAINER_NAME || true
                        docker rm $CONTAINER_NAME || true
                        docker rmi $PRE_IMAGE || true
                    else
                        echo "No previous container found."
                    fi
                    """
                }
            }
        }

        stage('Deploy Latest Container') {
            when {
                anyOf {
                    changeset "**/Src/FrontEnd/Gateway/PaymentGateway.GatewayUi/**"  // Only trigger when files in the 'src' folder change
                    changeset "Src/Backend/PaymentGateway.Domain/PaymentGateway.Domain.csproj"
                    changeset "BuildingBlocks/Common.Helper/Common.Helper.csproj"
                }
            }
            steps {
                sh "docker run --name $CONTAINER_NAME -dp 0.0.0.0:6060:8080 $IMAGE_NAME"
            }
        }
    }

}
